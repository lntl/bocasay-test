{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% if app.user %}
    {{include('nav/primary_nav.html.twig')}}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Register</h1>

    <div class="wrap-log">
        <h1 class="text-center mt-5 h3">Create a account</h1>
        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'} } ) }}
            <div class="d-flex justify-content-between">
                    {{ form_row(registrationForm.firstName) }}
                    {{ form_row(registrationForm.lastName) }}
            </div>
            <div class="d-flex justify-content-between role">
                {{ form_row(registrationForm.roles) }}
            </div>
            {# <div class="d-flex justify-content-between full">
                {{ form_row(registrationForm.roles) }}
            </div> #}
            <div class="d-flex justify-content-between full">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="d-flex justify-content-between full">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
            </div>
            <button type="submit" class="addusr btn btn-lg btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>
    {% endif %}
{% endblock %}
